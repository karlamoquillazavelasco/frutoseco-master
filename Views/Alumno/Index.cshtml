@model demomvc.Models.Alumno
@{
    ViewData["Title"] = "Contacto";
}

<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4">Formulario de Alumno</h1>
    

    <form asp-controller="Alumno" asp-action="Create">
        <label asp-for="apellidos" class="form-label"></label>
        <input asp-for="apellidos" class="form-control"/>

        <label asp-for="nombres" class="control-label"></label>
        <input asp-for="nombres" class="form-control" />

        <label asp-for="dni" class="control-label"></label>
        <input asp-for="dni" class="form-control" />
        
        <label asp-for="genero" class="control-label">Sexo</label>
        <select asp-for="genero" class="custom-select">
                <option asp-for="genero" value="M">Masculino</option> 
                <option asp-for="genero" value="F">Femenino</option>                
        </select>

        <label asp-for="carrera" class="control-label">Carrera</label>
        <select asp-for="carrera" class="custom-select">
                <option asp-for="genero" value="sistemas">Ing. de Sistemas</option> 
                <option asp-for="genero" value="civil">Ing. de Civil</option>  
                <option asp-for="genero" value="industrial">Ing. Industrial</option>    
                <option asp-for="genero" value="quimica">Ing. Quimica</option>                  
        </select>
        <div class="form-group">
            <label asp-for="fechanac" class="control-label">Fecha Nacimiento</label>
            <input asp-for="fechanac" type="date" class="form-control" />
        </div> 


        <div class="form-group">
            <button type="submit" class="btn btn-warning" >Registrar</button> 
        </div>              
    </form>
    <h1>@ViewData["Message"]</h1>
    

</div>
